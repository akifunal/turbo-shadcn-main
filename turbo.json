{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"lint": {},
		"lint:fix": {},
		"format": {},
		"format:fix": {},
		"types:check": {},
		"test": {
			"dependsOn": ["^build"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		},
		"start": {
			"dependsOn": ["^build"],
			"persistent": true
		},
		"start-standalone": {
			"dependsOn": ["^build"],
			"persistent": true
		},
		"serve": {
			"dependsOn": ["^build"],
			"persistent": true
		}
	}
}
