{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js",
	"extends": "./base.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }],
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@host/*": ["../apps/host/*"],
			"@header/*": ["../apps/header/*"],
			"@checkout/*": ["../apps/checkout/*"],
			"@store/*": ["apps/store/*"],
			"@nextjs-nx-module-federation/design-system": [
				"libs/design-system/src/index.ts"
			],
			"@nextjs-nx-module-federation/design-system/*": [
				"libs/design-system/src/*"
			]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
